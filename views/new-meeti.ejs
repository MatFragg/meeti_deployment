<main class="contenedor contenedor-formularios">
    <h1><%= pageName %></h1>
    <form action="/new-meeti" method="POST" class="default-form">
        <legend>About the Meeti</legend>
        <div class="campo">
            <label>Group</label>
            <select name="groupId">
                <option value="" disabled selected>--- Select a Group ---</option>
                <% if(groups.length > 0) { %>
                    <% groups.forEach(group => { %>
                        <option value="<%= group.id %>"><%= group.name %></option>
                    <% }) %>
                <% } %>
            </select>
        </div>
        <div class="campo">
            <label>Title</label>
            <input name="title" type="text" placeholder="Title"></input>
        </div>
        <div class="campo">
            <label>Guest</label>
            <input name="guest" type="text" placeholder="Guest's Name"></input>
        </div>
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Date</label>
                <input name="date" type="date" placeholder="Date"></input>
            </div>
            <div class="campo">
                <label>Hour</label>
                <input name="hour" type="time" placeholder="Hour"></input>
            </div>
        </div>
        <div class="campo">
            <label>Slot</label>
            <input type="number" min="1" name="slot" placeholder="Slot">
        </div>
        <div class="campo descripcion">
            <label>Description</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="description">
                <trix-editor input="x"></trix-editor>
            </div>    
        </div>

        <legend>Meeti Location</legend>
        <div class="campo buscador">
            <label>Put Meeti Location</label>
            <div class="contenedor-input">
                <input type="text" id="searcherform" placeholder="Location">
                <small>The Attendee will put an estimated locaction</small>
            </div>
        </div>

        <div class="campo map">
            <div id="map"></div>
            <p class="infomacion">Move the pin to the location where the Meeti will be held<p>
        </div>
        <p class="informacion">Confirm that the following fields are correct</p>
        <div class="campo">
            <label>Address</label>
            <input type="text" id="address" name="address" placeholder="Address">
        </div>
        <div class="campo">
            <label>City</label>
            <input type="text" id="city" name="city" placeholder="City">
        </div>
        <div class="campo">
            <label>State</label>
            <input type="text" id="state" name="state" placeholder="State">
        </div>
        <div class="campo">
            <label>Country</label>
            <input type="text" id="country" name="country" placeholder="Country">
        </div>
        <div class="campo">
            <label>Latitude</label>
            <input type="text" id="lat" name="lat" readonly="readonly">
        </div>
        <div class="campo">
            <label>Longitude</label>
            <input type="text" id="lng" name="lng" readonly="readonly">
        </div>
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Create Meeti">
        </div>
    </form>
</main>