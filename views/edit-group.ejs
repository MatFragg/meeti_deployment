<main class="contenedor contenedor-formularios no-padding">
    <h1><%= pageName %></h1>

    <form action="/edit-group/<%= group.id %>" class="default-form" method="POST">
        <div class="campo">
            <label>Name</label>
            <input type="text" value="<%= group.name %>" name="name" placeholder="Group Name">
        </div>
        <div class="campo descripcion">
            <label>Description</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="description" value="<%= group.description %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label>Category</label>
            <div class="checkbox-container">
                <% categories.forEach(category => { %>
                    <div class="checkbox-item">
                        <input type="checkbox" name="category[]"  value="<%= category.id %>" <%= categoriesGroups.some(cg => cg.categoryId === category.id) ? 'checked' : '' %>>
                        <label><%= category.name %></label>
                    </div>
                <% }) %>
            </div>
        </div>
        <div class="campo">
            <label>Website</label>
            <input type="url" name="url" placeholder="Website" value="<%= group.url %>">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Save Changes" class="btn btn-rosa">
        </div>
    </form>
</main>