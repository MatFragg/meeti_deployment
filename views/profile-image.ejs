<main class="contenedor contenedor-formulario">
    <h1><%= pageName %></h1>

    <form class="default-form" method="POST" enctype="multipart/form-data">
        <legend>Upload your Image here</legend>
        <div class="campo">
            <label>Image</label>
            <input type="file" name="image">
        </div>
        <% if(user.image) {%>
            <div class="campo">
                <label>Current Image</label>
                <img src="/uploads/profiles/<%= user.image %>" width="400">
            </div>
        <% } else { %>
            <p>There is not an image yet.</p>
        <% } %>
        <div class="campo enviar">
            <input type="submit" value="Upload Image" class="btn btn-rosa">
        </div>
    </form>
</main>