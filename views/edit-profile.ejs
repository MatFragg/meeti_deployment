<main class="contenedor contenedor-formularios no-padding">
    <h1><%= pageName %></h1>

    <form action="/edit-profile" method="POST" class="default-form">
        <div class="campo">
            <label>Name</label>
            <input type="text" name="name" value="<%= user.name %>" required>
        </div>

        <div class="campo description">
            <label>Who am I</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="description" value="<%= user.description %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label>E-mail</label>
            <input type="email" name="email" value="<%= user.email %>">
        </div>
        <div class="campo-btns">
            <div class="campo boton">
                <a href="/update-password" class="btn btn-rosa">Change Password</a>
            </div>
            <div class="campo enviar">
                <input type="submit" value="Save Profile" class="btn btn-rosa">
            </div>
        </div>
    </form>
</main>