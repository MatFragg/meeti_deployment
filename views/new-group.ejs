<main class="contenedor contenedor-formularios no-padding">
    <h1><%= pageName %></h1>

    <form action="/new-group" class="default-form" method="POST" enctype="multipart/form-data">
        <div class="campo">
            <label>Name</label>
            <input type="text" name="name" placeholder="Group Name">
        </div>
        <div class="campo descripcion">
            <label>Description</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="description">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label>Category</label>
            <div class="checkbox-container">
                <% categories.forEach(category => { %>
                    <div class="checkbox-item">
                        <input type="checkbox" name="category[]"  value="<%= category.id %>">
                        <label><%= category.name %></label>
                    </div>
                <% }) %>            
            </div>
        </div>

        <div class="campo">
            <label>Image</label>
            <input type="file" name="image">
        </div>
        <div class="campo">
            <label>Website</label>
            <input type="url" name="url" placeholder="Website">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Create Group" class="btn btn-rosa">
        </div>
    </form>
</main>