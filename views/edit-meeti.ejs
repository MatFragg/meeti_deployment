
<main class="contenedor contenedor-formularios">
    <h1><%- pageName %></h1>
    <form class="default-form" method="POST">
        <legend>About the Meeti</legend>
        <div class="campo">
            <label>Group</label>
            <select name="groupId">
                    <option value="" disabled selected>--- Select a Group ---</option>
                    <% if(group.length > 0) { %>
                        <% group.forEach(group => { %>
                            <option <%= (meeti.groupId === group.id) ? 'selected' : '' %> value="<%= group.id %>"><%= group.name %></option>
                        <% }) %>
                    <% } %>
            </select>
        </div>
        <div class="campo">
            <label>Tltle</label>
            <input type="text" name="title" value="<%= meeti.title %>">
        </div>
        <div class="campo">
            <label>Guest</label>
            <input type="text" name="guest" value="<%= meeti.guest %>">
        </div>
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Date</label>
                <input type="date" name="date" value="<%= meeti.date %>">
            </div>
            <div class="campo">
                <label>Hour</label>
                <input type="time" name="hour" value="<%= meeti.hour %>">
            </div>
        </div>
        <div class="campo">
            <label>Slot</label>
            <input type="number" min="1" name="slot" value="<%= meeti.slot %>">
        </div>
        <div class="campo descripcion">
            <label>Description</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="description" value="<%= meeti.description %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <legend>Meeti Location</legend>
        <div class="campo buscador">
            <label>Put Meeti Location</label>
            <div class="contenedor-input">
                <input type="text" id="searcherform" placeholder="Location">
                <small>The Attendee will put an estimated locaction</small>
            </div>
        </div>
        <div id="editar-map" class="campo map">
            <div id="map"></div>
            <p class="informacion">Move the pin to the location where the Meeti will be held</p>
        </div>
        
        <p class="informacion">Confirm that the following fields are correct</p>

        <div class="campo">
            <label>Address</label>
            <input type="text" id="address" name="address" value="<%= meeti.address %>">
        </div>
        <div class="campo">
            <label>City</label>
            <input type="text" id="city" name="city" placeholder="City" value="<%= meeti.city %>">
        </div>
        <div class="campo">
            <label>State</label>
            <input type="text" id="state" name="state" placeholder="State" value="<%= meeti.state %>">
        </div>
        <div class="campo">
            <label>Country</label>
            <input type="text" id="country" name="country" placeholder="Country" value="<%= meeti.country %>">
        </div>
        <div class="campo">
            <label>Latitude</label>
            <input type="text" id="lat" name="lat" readonly="readonly" value="<%= meeti.location.coordinates[0] %>">
        </div>
        <div class="campo">
            <label>Longitude</label>
            <input type="text" id="lng" name="lng" readonly="readonly" value="<%= meeti.location.coordinates[1] %>">
        </div>
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Save Meeti">
        </div>     
    </form>
</main>